{{ $paginator := .Paginate (where .Data.Pages "Type" "post") .Site.Paginate}}
<?xml version="1.0" encoding="UTF-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>{{ .Site.Title }}</title>
  <link href="{{ .Site.BaseURL }}feed.xml" rel="self" type="application/atom+xml"/>
  <updated>{{ .Data.Pages.Updated.Format "2006-01-02T15:04:05-07:00" }}</updated>
  <id>{{ .Site.BaseURL }}</id>
  <author>
    <name>{{ .Site.Author.Name }}</name>
    <email>{{ .Site.Author.Email }}</email>
  </author>
  <entry>
  {{ range first 10 $paginator.Pages }}
    <title>{{ .Title }}</title>
    <link href="{{ .RelPermalink }}" />
    <updated>{{ .Date.Format "2006-01-02T15:04:05-07:00" }}</updated>
    <id>{{ .Permalink }}</id>
    <content type="html">{{ .Content | xmlString }}</content>
  {{ end }}
  </entry>
</feed>